        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <div class="item-action">
                        <span class="btn btn-danger image-delete" title="Supprimer l'image"><i class="fa fa-trash"></i></span>
                    </div>
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_row(form.imageFile) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}