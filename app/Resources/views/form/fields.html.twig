{% block unit_widget %}
    {% spaceless %}
        {% if unit %}
            <div class="input-group">
                {{ form_widget(form) }}
                <span class="input-group-addon" id="basic-addon2">{{ unit }}</span>
            </div>
        {% else %}
            {{ block('integer_widget') }}
        {% endif %}
    {% endspaceless %}
{% endblock %}